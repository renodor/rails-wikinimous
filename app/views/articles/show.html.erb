
<h1>
  <%= @article.title %>
  <%= link_to edit_path(@article.id) do %>
    <i class='fas fa-pencil-alt'></i>
  <% end %>
  <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class='fas fa-trash-alt'></i>
  <% end %>
</h1>


<p> <%= @article.content %></p>

<%= link_to "Back to Articles", articles_path %>
